{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom", 
      "dom.iterable", 
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@Components/index": ["./app/components/index.ts"],
      "@Hooks/index": ["./app/hooks/index.ts"],
      "@Interfaces/*": ["./app/interfaces/*"],
      "@Utils/*": ["./app/utils/*"],
      "@Services/index": ["./app/services/index.ts"],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts", 
    "**/*.tsx",
  ],
  "exclude": ["node_modules"]
}
